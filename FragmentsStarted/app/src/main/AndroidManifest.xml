<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidbootcamp.androidtemplate">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainMessageActivity"
            android:label="MainMessage"
            android:screenOrientation="landscape" />
        <activity
            android:name=".FragmentBasicActivity"
            android:label="FragmentBasic"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FragmentProgrammingActivity"
            android:label="FragmentProgramming"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FragmentCommunicationActivity"
            android:label="FragmentCommunication"
            android:screenOrientation="portrait" />
        <activity android:name=".MyFirstFragmentActivity"
            android:label="MyFirstFragment"
            android:screenOrientation="portrait"/>
        <activity android:name=".ColorActivity"
            android:label="Color"
            android:screenOrientation="portrait"/>
    </application>

</manifest>